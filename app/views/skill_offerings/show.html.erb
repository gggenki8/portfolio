<main class="offering-detail">

  <!-- レッスン名 -->
  <h1 class="offering-title"><%= @skill_offering.title %></h1>

  <!-- 講師情報 -->
  <section class="offering-teacher">
    <h2>講師情報</h2>
    <div class="teacher-profile">
      <% if @skill_offering.user.image.attached? %>
        <%= image_tag @skill_offering.user.avatar.variant(resize_to_limit: [100, 100]), class: "teacher-avatar" %>
      <% else %>
        <div class="teacher-avatar-placeholder">No Image</div>
      <% end %>
      <p class="teacher-name"><%= @skill_offering.user.name %></p>
      <!-- 講師プロフィールへのリンク -->
      <%= link_to "講師のプロフィールを見る", user_path(@skill_offering.user), class: "teacher-profile-link" %>
    </div>
  </section>

  <!-- レッスン概要（カテゴリのみ） -->
  <section class="offering-info">
    <h2>レッスン概要</h2>
    <!-- カテゴリ -->
    <p class="offering-category">
      <strong>カテゴリ：</strong>
      <%= @skill_offering.category.name %>
    </p>
    <!-- 提供可能時間 -->
    <p class="offering-available-time">
      <strong>提供可能時間：</strong>
      <%= @skill_offering.available_time %>
    </p>
  </section>

  <!-- 詳細説明 -->
  <section class="offering-description">
    <h2>詳細説明</h2>
    <p><%= simple_format(@skill_offering.details) %></p>
  </section>

  <!-- 予約ボタン -->
  <section class="offering-reservation">
    <%= link_to "このレッスンを予約する", "#", class: "reservation-btn" %>
  </section>

</main>
