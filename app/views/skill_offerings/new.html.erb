<!-- レッスン登録画面 -->

<h1>スキル提供の登録</h1>

<%= form_with(model: @skill_offering, local: true) do |f| %>
  <% if @skill_offering.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@skill_offering.errors.count, "エラー") %>が発生しました:</h2>
      <ul>
        <% @skill_offering.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- タイトル -->
  <div class="form-group">
  <%= f.label :title, "タイトル" %><br>
  <%= f.text_field :title, required: true, placeholder: "記入" %>
  <small>例: Ruby on Railsをマスターしよう"</small>
</div>

  <!-- カテゴリ選択 -->
  <div class="form-group">
    <%= f.label :category_id, "カテゴリ*" %><br>
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), prompt: "選択してください" %>
  </div>

  <!-- 提供可能時間 -->
  <div class="form-group">
    <%= f.label :available_time, "提供可能な時間帯*" %><br>
    <%= f.text_field :available_time, placeholder: "例: 毎週月・水 18:00〜20:00" %>
    <small>例: 毎週月・水 18:00〜20:00</small>
  </div>

  <!-- 詳細説明 -->
  <div class="form-group">
    <%= f.label :details, "レッスン内容*" %><br>
    <%= f.text_area :details, rows: 6, placeholder: "ここに詳しい内容を入力してください。どのようなことをできるか、進め方など記載すると良いです。" %>
  </div>

  <div class="form-actions">
    <%= f.submit "登録する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '戻る', root_path, class: 'btn btn-secondary' %>
