<h1>スキル提供の登録</h1>

<%= form_with(model: @skill_offering, local: true) do |f| %>
  <% if @skill_offering.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@skill_offering.errors.count, "エラー") %>が発生しました:</h2>
      <ul>
        <% @skill_offering.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- カテゴリ選択 -->
  <div class="form-group">
    <%= f.label :category_id, "カテゴリ（必須）" %><br>
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), prompt: "選択してください" %>
  </div>

  <!-- 提供可能時間 -->
  <div class="form-group">
    <%= f.label :available_time, "提供可能な時間帯（必須）" %><br>
    <%= f.text_field :available_time, placeholder: "例: 毎週月・水 18:00〜20:00" %>
    <small>例: 毎週月・水 18:00〜20:00</small>
  </div>

  <!-- 詳細説明 -->
  <div class="form-group">
    <%= f.label :details, "スキルの詳細・説明（必須）" %><br>
    <%= f.text_area :details, rows: 6, placeholder: "ここに詳しい内容を入力してください。スキルの特徴や実績、どのようにレッスンを進めるかなどを記載すると良いです。" %>
  </div>

  <!--（任意）料金・場所を追加する場合は以下をコメント解除 -->
  <!--
  <div class="form-group">
    <%= f.label :price, "1時間あたりの料金（円）" %><br>
    <%= f.number_field :price, min: 0, placeholder: "例: 3000" %>
  </div>
  <div class="form-group">
    <%= f.label :location, "提供場所" %><br>
    <%= f.select :location, [ "オンライン", "対面（別途場所指定）" ] %>
  </div>
  -->

  <div class="form-actions">
    <%= f.submit "登録する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '戻る', root_path, class: 'btn btn-secondary' %>
