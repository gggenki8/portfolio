<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class = "field">
    <%= f.radio_button :user_type, "teacher", checked: (resource.user_type == "teacher") %>
    <%= f.label :user_type_teacher, "講師" %>
    <%= f.radio_button :user_type, "student", checked: (resource.user_type == "student") %>
    <%= f.label :user_type_student, "生徒" %>
  </div>

  <div class = "field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class = "field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class = "field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class = "field">
    <%= f.label :password_confirmation, "確認用パスワード" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class = "actions">
    <%= f.submit "新規作成" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
