<!-- 予約管理画面 -->

<div class="dashboard-container">
  <!-- 1. サマリーセクション -->
  <div class="dashboard-summary">
    <div class="summary-item">
      <p>承認待ちの仮予約</p>
      <p><%= @pending_reservations.count %> 件</p>
    </div>
    <div class="summary-item">
      <p>承認済み予約</p>
      <p><%= @approved_reservations.count %> 件</p>
    </div>
    <div class="summary-item">
      <p>提供中レッスン</p>
      <p><%= @my_skill_offerings.count %> 件</p>
    </div>
  </div>

  <!-- 2. 予約管理セクション -->
  <div class="dashboard-card">
    <h1>予約管理</h1>

    <!-- 2-1. 自分が予約したレッスン一覧 -->
    <section>
      <h2>あなたの予約一覧</h2>

      <% if @my_reservations.any? %>
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>レッスン名</th>
                <th>講師</th>
                <th>予約日</th>
                <th>予約時間</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @my_reservations.each do |r| %>
                <tr>
                  <td><%= link_to r.skill_offering.title, skill_offering_path(r.skill_offering) %></td>
                  <td><%= link_to r.skill_offering.user.name, user_path(r.skill_offering.user), class: "profile-link" %></td>
                  <td><%= r.reserved_date.strftime("%Y-%m-%d") %></td>
                  <td><%= r.reserved_time.strftime("%H:%M") %></td>
                  <td>
                    <% if r.pending? || r.approved? %>
                      <%= link_to '詳細を確認', reservation_path(r), class: 'detail-link' %>
                      <%= button_to '❌', reservation_path(r, status: 'cancelled'), method: :patch,
                                    data: { confirm: '本当にキャンセルしますか？' }, class: 'cancel-btn' %>
                    <% elsif r.cancelled? %>
                      <span class="status-badge status-badge--cancelled">キャンセル済み</span>
                    <% elsif r.rejected? %>
                      <span class="status-badge status-badge--rejected">却下</span>
                    <% elsif r.completed? %>
                      <%= link_to '詳細を確認', reservation_path(r), class: 'detail-link' %>
                      <%= link_to 'レビューを書く', approved_reservation_path(r), class: 'btn-review' %>
                    <% else %>
                      <span class="status-badge">不明</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="no-data">あなたはまだレッスンを予約していません。</p>
      <% end %>
    </section>

    <!-- 2-2. 提供者向け予約一覧 -->
    <section>
      <h2>あなたへのレッスン予約一覧</h2>

      <!-- 承認待ち -->
      <h3>承認待ちの仮予約</h3>
      <% if @pending_reservations.any? %>
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>生徒名</th>
                <th>レッスン名</th>
                <th>希望日</th>
                <th>希望時間</th>
                <th>メッセージ</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
              <% @pending_reservations.each do |res| %>
                <tr>
                  <td><%= link_to res.user.name, user_path(res.user), class: "profile-link" %></td>
                  <td><%= res.skill_offering.title %></td>
                  <td><%= res.reserved_date.strftime("%Y-%m-%d") %></td>
                  <td><%= res.reserved_time.strftime("%H:%M") %></td>
                  <td><%= truncate(res.message, length: 50) %></td>
                  <td class="btn-wrap">
                    <%= button_to "承認", reservation_path(res, status: "approved"), method: :patch, class: "approve-btn", data: { confirm: "本当に承認しますか？" } %>
                    <%= button_to "却下", reservation_path(res, status: "rejected"), method: :patch, class: "reject-btn", data: { confirm: "本当に却下しますか？" } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="no-data">現在、承認待ちの仮予約はありません。</p>
      <% end %>

      <!-- 承認済み -->
      <h3>承認済みの予約</h3>
      <% if @approved_reservations.any? %>
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>生徒名</th>
                <th>レッスン名</th>
                <th>予約日</th>
                <th>予約時間</th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @approved_reservations.each do |res| %>
                <tr>
                  <td><%= link_to res.user.name, user_path(res.user), class: "profile-link" %></td>
                  <td><%= res.skill_offering.title %></td>
                  <td><%= res.reserved_date.strftime("%Y-%m-%d") %></td>
                  <td><%= res.reserved_time.strftime("%H:%M") %></td>
                  <td>
                    <%= link_to '詳細を確認', reservation_path(res), class: 'detail-link' %>
                    <%= button_to '予約をキャンセル', reservation_path(res, status: 'cancelled'), method: :patch,
                                  data: { confirm: '本当にキャンセルしますか？' }, class: 'cancel-btn' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="no-data">現在、承認済みの予約はありません。</p>
      <% end %>

      <!-- 却下済み -->
      <h3>キャンセル・却下された予約</h3>
      <% if @rejected_reservations.any? %>
        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>生徒名</th>
                <th>レッスン名</th>
                <th>希望日</th>
                <th>希望時間</th>
              </tr>
            </thead>
            <tbody>
              <% @rejected_reservations.each do |res| %>
                <tr>
                  <td><%= link_to res.user.name, user_path(res.user), class: "profile-link" %></td>
                  <td><%= res.skill_offering.title %></td>
                  <td><%= res.reserved_date.strftime("%Y-%m-%d") %></td>
                  <td><%= res.reserved_time.strftime("H:%M") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="no-data">現在、却下された予約はありません。</p>
      <% end %>
    </section>
  </div>

  <!-- 3. 提供中レッスン一覧セクション -->
  <div class="dashboard-card">
    <h1>提供中のレッスン一覧</h1>
    <div class="solist-grid">
      <% if @my_skill_offerings.any? %>
        <% @my_skill_offerings.each do |so| %>
          <div class="solist-card">
            <h3><%= so.title %></h3>
            <p><%= so.category.name %></p>
            <p>提供時間: <%= so.available_time %></p>
            <div class="actions">
              <%= link_to '詳細', skill_offering_path(so) %>
              <%= link_to '編集', edit_skill_offering_path(so) %>
              <%= button_to '削除', skill_offering_path(so), method: :delete, data: { confirm: '本当に削除しますか？' } %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>提供中のレッスンはありません</p>
      <% end %>
    </div>
  </div>
</div>

<%= render "received_reviews" %>