<!-- プロフィール画面 -->

<div class="profile-wrapper">
  <div class="profile-card">
    <div class="profile-header">
      <h1>プロフィール</h1>
      <% if @user == current_user %>
        <%= link_to "編集", edit_user_profile_path, class: "profile-edit" %>
      <% end %>
    </div>

    <!-- プロフィール本文 -->
    <div class="profile-body">
      <!-- アイコンと名前 -->
      <div class="profile-info">
        <div class="profile-icon">
          <% if @user.image.attached? %>
            <%= image_tag @user.image.variant(resize_to_fill: [80, 80]), alt: "プロフィール画像" %>
          <% else %>
            <span><%= @user.name.first(1) %></span>
          <% end %>
        </div>
        <h2 class="profile-name"><%= @user.name %></h2>
      </div>

      <!-- 自己紹介 -->
      <div class="section">
        <h3 class="section-title">自己紹介</h3>
        <p class="section-text">
          <%= @user.profile.presence || "よろしくお願いします" %>
        </p>
      </div>

      <!-- スキル -->
      <div class="section">
        <h3 class="section-title">スキル</h3>
        <div class="skills">
          <% if @user.skill.present? %>
            <p class="section-text"><%= @user.skill %></p>
          <% else %>
            <p class="text-gray-500">スキルが登録されていません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
