<!-- プロフィール画面 -->

<div class="profile-wrapper">
  <div class="profile-card">
    <!-- ヘッダー -->
    <div class="profile-header">
      <h1>プロフィール</h1>
    </div>

    <!-- 自分のプロフィールを見ているときのみ「編集」リンクを表示 -->
    <% if @user == current_user %>
      <div>
        <%= link_to "編集", edit_user_profile_path, class: "profile-edit" %>
      </div>
    <% end %>

    <!-- プロフィール内容 -->
    <div class="profile-body">
      <!-- アイコンと名前 -->
      <div class="profile-info">
        <div class="profile-icon">
          <%= @user.name.first(1) %>
        </div>
        <h2 class="profile-name"><%= @user.name %></h2>
      </div>

      <!-- 自己紹介 -->
      <div class="section">
        <h3 class="section-title">自己紹介</h3>
        <p class="section-text">
          <%= @user.profile.presence || "よろしくお願いします" %>
        </p>
      </div>

      <!-- スキル -->
      <div class="section">
        <h3 class="section-title">スキル</h3>
        <div class="skills">
          <% if @user.skill.present? %>
            <p class="section-text"><%= @user.skill %></p>
          <% else %>
            <p class="text-gray-500">スキルが登録されていません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>