<h2>プロフィール編集画面</h2>
<%= link_to "ユーザー詳細",  user_path(current_user), class: "user-edit" %>

<%= form_with(model: current_user, url: user_path(current_user), method: :patch, local: true, html: { multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.label :image, "アイコン画像" %><br>
    <% if current_user.image&.attached? %>
      <div class="mb-2">
        <%= image_tag current_user.image.variant(resize_to_limit: [100, 100]), alt: "プロフィール画像", class: "rounded" %>
      </div>
    <% end %>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :introduction, "自己紹介" %><br>
    <%= f.text_area :introduction, rows: 5, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :skill, "スキル" %><br>
    <%= f.text_area :skill, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </div>
<% end %>
